algoritmo "EX003"
var
   userName: Caracter
   pay: Real
inicio
      Escreva("Digite o nome do funcionário: ")
      Leia(userName)
      Escreva("Digite o salário do funcionário: ")
      Leia(pay)
      Escreval("O funcionário ",userName," teve um salário de R$",pay," em Junho.")
fimalgoritmo